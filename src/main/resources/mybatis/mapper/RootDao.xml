<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.weekly_report.dao.RootDao">

    <resultMap id="BaseResultMap" type="com.test.weekly_report.entity.Root">
        <!--@Table root-->
        <result property="rootName" column="root_name" jdbcType="VARCHAR"/>
        <result property="rootPassword" column="root_password" jdbcType="VARCHAR"/>
        <result property="rootId" column="root_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          root_name, root_password, root_id
        from weeklyreport.root
        where root_id = #{rootId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          root_name, root_password, root_id
        from weeklyreport.root
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByItem" resultMap="BaseResultMap">
        select
          root_name, root_password, root_id
        from weeklyreport.root
        <where>
            <if test="rootName != null and rootName != ''">
                and root_name = #{rootName}
            </if>
            <if test="rootPassword != null and rootPassword != ''">
                and root_password = #{rootPassword}
            </if>
            <if test="rootId != null">
                and root_id = #{rootId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rootId" useGeneratedKeys="true">
        insert into weeklyreport.root(root_name, root_password)
        values (#{rootName}, #{rootPassword})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weeklyreport.root
        <set>
            <if test="rootName != null and rootName != ''">
                root_name = #{rootName},
            </if>
            <if test="rootPassword != null and rootPassword != ''">
                root_password = #{rootPassword},
            </if>
        </set>
        where root_id = #{rootId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weeklyreport.root where root_id = #{rootId}
    </delete>
     <!--查询所有root-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        root_name, root_password, root_id        from root
    </select>
</mapper>