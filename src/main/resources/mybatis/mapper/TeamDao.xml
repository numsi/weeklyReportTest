<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.weekly_report.dao.TeamDao">

    <resultMap id="BaseResultMap" type="com.test.weekly_report.entity.Team">
        <!--@Table team-->
        <result property="teamUid" column="team_uid" jdbcType="INTEGER"/>
        <result property="teamId" column="team_id" jdbcType="VARCHAR"/>
        <result property="teamPassword" column="team_password" jdbcType="VARCHAR"/>
        <result property="teamName" column="team_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          team_uid, team_id, team_password, team_name
        from weeklyreport.team
        where team_uid = #{teamUid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          team_uid, team_id, team_password, team_name
        from weeklyreport.team
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByItem" resultMap="BaseResultMap">
        select
          team_uid, team_id, team_password, team_name
        from weeklyreport.team
        <where>
            <if test="teamUid != null">
                and team_uid = #{teamUid}
            </if>
            <if test="teamId != null and teamId != ''">
                and team_id = #{teamId}
            </if>
            <if test="teamPassword != null and teamPassword != ''">
                and team_password = #{teamPassword}
            </if>
            <if test="teamName != null and teamName != ''">
                and team_name = #{teamName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="teamUid" useGeneratedKeys="true">
        insert into weeklyreport.team(team_id, team_password, team_name)
        values (#{teamId}, #{teamPassword}, #{teamName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weeklyreport.team
        <set>
            <if test="teamId != null and teamId != ''">
                team_id = #{teamId},
            </if>
            <if test="teamPassword != null and teamPassword != ''">
                team_password = #{teamPassword},
            </if>
            <if test="teamName != null and teamName != ''">
                team_name = #{teamName},
            </if>
        </set>
        where team_uid = #{teamUid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weeklyreport.team where team_uid = #{teamUid}
    </delete>
     <!--查询所有team-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        team_uid, team_id, team_password, team_name        from team
    </select>
</mapper>